<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">


    <Button
        android:id="@+id/buyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="20dp"
        android:onClick="buyPressed"
        android:text="@string/buy_button" />
    <Button
        android:id="@+id/leaveMarketButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/buyButton"
        android:onClick="exitPressed"
        android:text="@string/exit_button" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sell_goods"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/buyButton"
        android:layout_below="@+id/sellItemDisplay"
        android:layout_marginBottom="-109dp" />

    <TextView
        android:id="@+id/sellItemDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/sell_button" />


    <TextView
        android:id="@+id/cargoDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="150dp"
        android:ems="10"
        android:text="@string/open_cargo_text" />


    <TextView
        android:id="@+id/currentMoneyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="200dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/current_money_text" />

</RelativeLayout>