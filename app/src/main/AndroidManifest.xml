<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs2340.garbagecollection.spacetrader">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.GameScreenActivity"></activity>
        <activity android:name=".views.MainActivity"></activity>
        <activity android:name=".views.MarketBuyActivity"></activity>
        <activity android:name=".views.MarketSellActivity"></activity>
        <activity android:name=".views.QuantityTransactionActivity"></activity>
        <activity android:name=".views.ConfigurationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>